<article id="comment_<%=comment.id%>">
  <p><%= comment.time_since_creation %> ago, <%= comment.author.username %> said:<p>
  <p><%= comment.description %></p>
<% if current_user == comment.author %>
  <p>
    <a href="/comments/<%=comment.id%>/edit">edit</a>
    <a href="/comments/<%=comment.id%>/delete">delete</a>
  </p>
<% end %>
  <p><%= comment.vote_total %> vote<%= "s" if comment.vote_total > 1 %> :
    <% if current_user %>
      <a href="/comments/<%=comment.id%>/upvote">Up Vote</a> : <a href="/comments/<%=comment.id%>/nullvote">Null Vote</a> : <a href="/comments/<%=comment.id%>/downvote">Down Vote</a>
    <% end %>
</article>
<hr>
